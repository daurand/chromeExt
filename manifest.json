{
  "name": "Screenshots",
  "version": "0.0.1",
  "description": "Take screenshots",
  "manifest_version": 3,
  "background": {
      "service_worker": "background.js"
  },
  "permissions": [
      "desktopCapture",
      "downloads",
      "tabs"
  ],
  "action": {
      "default_title": "Take a Screenshot"
  },
  "icons": {
      "16": "/images/mainIcon.png"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content_script.js"]
      }
  ]
}